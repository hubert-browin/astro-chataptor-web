---
import type { Locale } from '../i18n/config';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Locale;
  slug: string;
}

const { lang, slug } = Astro.props;
---

<header class="sticky top-0 z-50 bg-white/80 backdrop-blur-xl border-b border-zinc-100">
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
    <a href={`/${lang}/`} class="flex items-center gap-2">
      <img
        src="/images/logotype.png"
        alt="Chataptor Logo"
        class="h-6 md:h-7 object-contain opacity-90"
      />
    </a>

    <nav class="hidden md:flex items-center gap-6">
      <a
        href={`/${lang}/`}
        class="text-sm font-medium text-zinc-500 hover:text-zinc-900 transition-colors"
      >
        Home
      </a>
      <a
        href={`/${lang}/blog/`}
        class="text-sm font-medium text-zinc-500 hover:text-zinc-900 transition-colors"
      >
        Blog
      </a>
    </nav>

    <div class="flex items-center gap-4">
      <LanguageSwitcher currentLang={lang} slug={slug} />
      <a
        href="https://app.chataptor.com/login"
        class="text-sm font-medium text-zinc-500 hover:text-zinc-900 transition-colors"
      >
        Zaloguj
      </a>
      <a
        href="https://app.chataptor.com/register"
        class="bg-zinc-900 text-white px-5 py-2 rounded-full text-sm font-medium hover:bg-black transition-all"
      >
        Rozpocznij
      </a>
    </div>
  </div>
</header>
