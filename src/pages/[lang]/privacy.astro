---
import { locales, type Locale } from '../../i18n/config';
import { getPrivacyTranslations } from '../../i18n/privacy';
import '../../styles/global.css';

export function getStaticPaths() {
  return locales.map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: Locale };
const t = getPrivacyTranslations(lang);
const year = new Date().getFullYear();
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />
    <title>{t.pageTitle}</title>
    <meta name="description" content={t.metaDescription} />
  </head>
  <body class="min-h-screen bg-white text-zinc-900 antialiased">
    <!-- HEADER -->
    <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-xl border-b border-zinc-100">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <a href={`/${lang}/`} class="flex items-center gap-2">
          <img src="/images/logotype.png" alt="Chataptor Logo" class="h-6 md:h-7 object-contain opacity-90" />
        </a>
        <a
          href={`/${lang}/`}
          class="text-sm font-medium text-zinc-500 hover:text-zinc-900 transition-colors flex items-center gap-2"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          {t.backToHome}
        </a>
      </div>
    </header>

    <!-- MOBILE TOC TOGGLE -->
    <div class="lg:hidden sticky top-[57px] z-40 bg-white/95 backdrop-blur-sm border-b border-zinc-100">
      <button
        id="toc-toggle"
        class="w-full px-6 py-3 flex items-center justify-between text-sm font-medium text-zinc-700 hover:bg-zinc-50 transition-colors"
      >
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
          </svg>
          {t.tableOfContents}
        </span>
        <svg id="toc-arrow" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </button>

      <!-- Mobile TOC Dropdown -->
      <div id="toc-mobile" class="hidden">
        <nav class="px-6 py-4 bg-zinc-50 border-b border-zinc-100 max-h-[60vh] overflow-y-auto">
          <ul class="space-y-2">
            {[
              { n: "1", title: t.toc.section1 },
              { n: "2", title: t.toc.section2 },
              { n: "3", title: t.toc.section3 },
              { n: "4", title: t.toc.section4 },
              { n: "5", title: t.toc.section5 },
              { n: "6", title: t.toc.section6 },
              { n: "7", title: t.toc.section7 },
              { n: "8", title: t.toc.section8 },
              { n: "9", title: t.toc.section9 },
              { n: "10", title: t.toc.section10 },
              { n: "11", title: t.toc.section11 },
              { n: "12", title: t.toc.section12 },
            ].map((item) => (
              <li>
                <a
                  href={`#section-${item.n}`}
                  class="flex items-center gap-3 py-2 text-sm text-zinc-700 hover:text-emerald-700 transition-colors"
                >
                  <span class="w-6 h-6 bg-emerald-100 rounded-md flex items-center justify-center text-xs font-bold text-emerald-700">
                    {item.n}
                  </span>
                  {item.title}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      </div>
    </div>

    <!-- CONTENT WITH SIDEBAR -->
    <div class="max-w-7xl mx-auto px-6 py-8 md:py-16 lg:grid lg:grid-cols-[280px_1fr] lg:gap-12">
      <!-- DESKTOP SIDEBAR TOC -->
      <aside class="hidden lg:block">
        <div class="sticky top-24">
          <div class="bg-white rounded-2xl ring-1 ring-zinc-900/5 shadow-sm p-6">
            <h3 class="text-xs font-bold text-zinc-400 uppercase tracking-widest mb-4">{t.tableOfContents}</h3>
            <nav>
              <ul class="space-y-1">
                {[
                  { n: "1", title: t.toc.section1 },
                  { n: "2", title: t.toc.section2 },
                  { n: "3", title: t.toc.section3 },
                  { n: "4", title: t.toc.section4 },
                  { n: "5", title: t.toc.section5 },
                  { n: "6", title: t.toc.section6 },
                  { n: "7", title: t.toc.section7 },
                  { n: "8", title: t.toc.section8 },
                  { n: "9", title: t.toc.section9 },
                  { n: "10", title: t.toc.section10 },
                  { n: "11", title: t.toc.section11 },
                  { n: "12", title: t.toc.section12 },
                ].map((item) => (
                  <li>
                    <a
                      href={`#section-${item.n}`}
                      class="group flex items-center gap-2.5 px-3 py-2 rounded-lg text-sm text-zinc-600 hover:text-zinc-900 hover:bg-zinc-50 transition-colors"
                    >
                      <span class="w-5 h-5 bg-zinc-100 group-hover:bg-emerald-100 rounded flex items-center justify-center text-[10px] font-bold text-zinc-500 group-hover:text-emerald-700 transition-colors">
                        {item.n}
                      </span>
                      <span class="truncate">{item.title}</span>
                    </a>
                  </li>
                ))}
              </ul>
            </nav>
          </div>

          <!-- Quick Links -->
          <div class="mt-6 p-4 bg-emerald-50 rounded-xl ring-1 ring-emerald-200/50">
            <p class="text-xs font-semibold text-emerald-800 mb-2">{t.questionsAboutData}</p>
            <a href="mailto:iodo@browin.pl" class="text-sm text-emerald-700 hover:text-emerald-900 font-medium flex items-center gap-1.5">
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              iodo@browin.pl
            </a>
          </div>
        </div>
      </aside>

      <!-- MAIN CONTENT -->
      <main class="max-w-3xl">
        <!-- Header -->
        <div class="mb-10">
          <div class="inline-flex items-center gap-2 px-3 py-1 bg-white ring-1 ring-zinc-900/5 rounded-full text-[11px] font-medium text-zinc-500 mb-6 shadow-[0_2px_8px_rgba(0,0,0,0.04)]">
            <svg class="w-3.5 h-3.5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            {t.dataProtectionBadge}
          </div>
          <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-zinc-900 tracking-tight mb-4">{t.privacyPolicyTitle}</h1>
          <p class="text-zinc-500 text-base md:text-lg">{t.lastUpdated}</p>
        </div>

        <!-- Intro Card -->
        <div class="bg-gradient-to-br from-emerald-50 to-teal-50 ring-1 ring-emerald-200/50 rounded-2xl p-6 mb-12">
          <div class="flex gap-4">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-emerald-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
            </div>
            <div>
              <p class="text-emerald-900 font-medium mb-1">{t.introTitle}</p>
              <p class="text-emerald-800/80 text-sm leading-relaxed">
                {t.introDescription}
              </p>
            </div>
          </div>
        </div>

        <!-- Sections -->
        <div class="space-y-12">
          <!-- Section 1 -->
          <section id="section-1" class="scroll-mt-24">
            <div class="flex items-start gap-4 mb-6">
              <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-sm">
                <span class="text-white font-bold text-sm">1</span>
              </div>
              <h2 class="text-xl md:text-2xl font-bold text-zinc-900 pt-1.5">{t.section1.title}</h2>
            </div>
            <div class="pl-0 md:pl-14">
              <p class="text-zinc-600 leading-relaxed mb-6">{t.section1.intro}</p>
              <div class="bg-white rounded-xl p-6 ring-1 ring-zinc-200 shadow-sm">
                <div class="flex items-start gap-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-zinc-100 rounded-xl flex items-center justify-center">
                    <svg class="w-6 h-6 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                  </div>
                  <div class="flex-1">
                    <p class="font-bold text-zinc-900 text-lg">{t.section1.companyName}</p>
                    <p class="text-zinc-600 mt-2">{t.section1.address}</p>
                    <p class="text-zinc-600">{t.section1.city}</p>
                  </div>
                </div>
                <div class="mt-6 pt-6 border-t border-zinc-100 grid grid-cols-2 gap-4 text-sm">
                  <div class="bg-zinc-50 rounded-lg px-4 py-3">
                    <p class="text-zinc-500 text-xs uppercase tracking-wider mb-1">{t.section1.nipLabel}</p>
                    <p class="font-semibold text-zinc-900">PL 729-268-73-25</p>
                  </div>
                  <div class="bg-zinc-50 rounded-lg px-4 py-3">
                    <p class="text-zinc-500 text-xs uppercase tracking-wider mb-1">{t.section1.regonLabel}</p>
                    <p class="font-semibold text-zinc-900">101003641</p>
                  </div>
                  <div class="bg-zinc-50 rounded-lg px-4 py-3">
                    <p class="text-zinc-500 text-xs uppercase tracking-wider mb-1">{t.section1.krsLabel}</p>
                    <p class="font-semibold text-zinc-900">0000459418</p>
                  </div>
                  <div class="bg-zinc-50 rounded-lg px-4 py-3">
                    <p class="text-zinc-500 text-xs uppercase tracking-wider mb-1">{t.section1.bdoLabel}</p>
                    <p class="font-semibold text-zinc-900">000008185</p>
                  </div>
                </div>
              </div>
            </div>
          </section>

          <!-- Section 2 -->
          <section id="section-2" class="scroll-mt-24">
            <div class="flex items-start gap-4 mb-6">
              <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-sm">
                <span class="text-white font-bold text-sm">2</span>
              </div>
              <h2 class="text-xl md:text-2xl font-bold text-zinc-900 pt-1.5">{t.section2.title}</h2>
            </div>
            <div class="pl-0 md:pl-14">
              <p class="text-zinc-600 leading-relaxed mb-6">{t.section2.intro}</p>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                <a href="mailto:iodo@browin.pl" class="group bg-white rounded-xl p-5 ring-1 ring-zinc-200 hover:ring-emerald-300 hover:shadow-md transition-all">
                  <div class="flex items-center gap-3 mb-2">
                    <div class="w-8 h-8 bg-emerald-100 rounded-lg flex items-center justify-center group-hover:bg-emerald-200 transition-colors">
                      <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                      </svg>
                    </div>
                    <span class="text-xs font-medium text-zinc-400 uppercase tracking-wider">{t.section2.emailLabel}</span>
                  </div>
                  <p class="text-zinc-900 font-semibold">iodo@browin.pl</p>
                </a>
                <div class="bg-white rounded-xl p-5 ring-1 ring-zinc-200">
                  <div class="flex items-center gap-3 mb-2">
                    <div class="w-8 h-8 bg-zinc-100 rounded-lg flex items-center justify-center">
                      <svg class="w-4 h-4 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                      </svg>
                    </div>
                    <span class="text-xs font-medium text-zinc-400 uppercase tracking-wider">{t.section2.phoneLabel}</span>
                  </div>
                  <p class="text-zinc-900 font-semibold">+48 42 23 23 200</p>
                </div>
                <div class="bg-white rounded-xl p-5 ring-1 ring-zinc-200">
                  <div class="flex items-center gap-3 mb-2">
                    <div class="w-8 h-8 bg-zinc-100 rounded-lg flex items-center justify-center">
                      <svg class="w-4 h-4 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                      </svg>
                    </div>
                    <span class="text-xs font-medium text-zinc-400 uppercase tracking-wider">{t.section2.faxLabel}</span>
                  </div>
                  <p class="text-zinc-900 font-semibold">+48 42 232 32 93</p>
                </div>
                <div class="bg-white rounded-xl p-5 ring-1 ring-zinc-200">
                  <div class="flex items-center gap-3 mb-2">
                    <div class="w-8 h-8 bg-zinc-100 rounded-lg flex items-center justify-center">
                      <svg class="w-4 h-4 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                    </div>
                    <span class="text-xs font-medium text-zinc-400 uppercase tracking-wider">{t.section2.addressLabel}</span>
                  </div>
                  <p class="text-zinc-900 font-semibold">ul. Pryncypalna 129/141, 93-373 Łódź</p>
                </div>
              </div>
            </div>
          </section>

          <!-- Section 3 -->
          <section id="section-3" class="scroll-mt-24">
            <div class="flex items-start gap-4 mb-6">
              <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-sm">
                <span class="text-white font-bold text-sm">3</span>
              </div>
              <h2 class="text-xl md:text-2xl font-bold text-zinc-900 pt-1.5">{t.section3.title}</h2>
            </div>
            <div class="pl-0 md:pl-14">
              <p class="text-zinc-600 leading-relaxed mb-6">{t.section3.intro}</p>
              <div class="space-y-6">
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 overflow-hidden">
                  <div class="bg-zinc-50 px-5 py-3 border-b border-zinc-100">
                    <h4 class="font-semibold text-zinc-900 flex items-center gap-2">
                      <span class="w-6 h-6 bg-emerald-100 rounded-md flex items-center justify-center text-xs font-bold text-emerald-700">3.1</span>
                      {t.section3.userProvidedTitle}
                    </h4>
                  </div>
                  <ul class="divide-y divide-zinc-100">
                    {t.section3.userProvidedItems.map((item) => (
                      <li class="flex items-center gap-3 px-5 py-3.5 text-zinc-700">
                        <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" />
                        </svg>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>

                <div class="bg-white rounded-xl ring-1 ring-zinc-200 overflow-hidden">
                  <div class="bg-zinc-50 px-5 py-3 border-b border-zinc-100">
                    <h4 class="font-semibold text-zinc-900 flex items-center gap-2">
                      <span class="w-6 h-6 bg-emerald-100 rounded-md flex items-center justify-center text-xs font-bold text-emerald-700">3.2</span>
                      {t.section3.automaticDataTitle}
                    </h4>
                  </div>
                  <ul class="divide-y divide-zinc-100">
                    {t.section3.automaticDataItems.map((item) => (
                      <li class="flex items-center gap-3 px-5 py-3.5 text-zinc-700">
                        <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" />
                        </svg>
                        {item}
                      </li>
                    ))}
                  </ul>
                </div>
              </div>
            </div>
          </section>

          <!-- Section 4 -->
          <section id="section-4" class="scroll-mt-24">
            <div class="flex items-start gap-4 mb-6">
              <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-sm">
                <span class="text-white font-bold text-sm">4</span>
              </div>
              <h2 class="text-xl md:text-2xl font-bold text-zinc-900 pt-1.5">{t.section4.title}</h2>
            </div>
            <div class="pl-0 md:pl-14">
              <p class="text-zinc-600 leading-relaxed mb-6">{t.section4.intro}</p>
              <div class="space-y-3">
                {t.section4.purposes.map((item) => (
                  <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4 hover:shadow-sm transition-shadow">
                    <div class="flex items-start justify-between gap-4">
                      <div>
                        <h4 class="font-semibold text-zinc-900">{item.title}</h4>
                        <p class="text-sm text-zinc-600 mt-1">{item.description}</p>
                      </div>
                      <span class="flex-shrink-0 text-[10px] font-medium text-emerald-700 bg-emerald-50 px-2 py-1 rounded-full whitespace-nowrap">
                        {item.legalBasis}
                      </span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          </section>

          <!-- Section 5 -->
          <section id="section-5" class="scroll-mt-24">
            <div class="flex items-start gap-4 mb-6">
              <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center shadow-sm">
                <span class="text-white font-bold text-sm">5</span>
              </div>
              <h2 class="text-xl md:text-2xl font-bold text-zinc-900 pt-1.5">{t.section5.title}</h2>
            </div>
            <div class="pl-0 md:pl-14">
              <p class="text-zinc-600 leading-relaxed mb-6">{t.section5.intro}</p>
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                {[
                  { icon: "M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01", ...t.section5.recipients[0] },
                  { icon: "M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9", ...t.section5.recipients[1] },
                  { icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z", ...t.section5.recipients[2] },
                  { icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z", ...t.section5.recipients[3] },
                ].map((item) => (
                  <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-5">
                    <div class="w-10 h-10 bg-zinc-100 rounded-lg flex items-center justify-center mb-3">
                      <svg class="w-5 h-5 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={item.icon} />
