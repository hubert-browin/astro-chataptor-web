      // POPOVER LOGIC
      const demoTrigger = document.getElementById('demo-trigger');
      const demoPopover = document.getElementById('demo-popover');
      const demoPopoverClose = document.getElementById('demo-popover-close');
      const demoPopoverBackdrop = document.getElementById('demo-popover-backdrop');
      const copyButtons = document.querySelectorAll('.copy-btn');
      
      if (demoTrigger && demoPopover) {
        
        function togglePopover(event) {
           event.stopPropagation();
           demoPopover.classList.toggle('is-open');
        }

        function closePopover() {
           demoPopover.classList.remove('is-open');
        }

        demoTrigger.addEventListener('click', togglePopover);
        
        if (demoPopoverClose) {
            demoPopoverClose.addEventListener('click', (e) => {
                e.stopPropagation();
                closePopover();
            });
        }

        if (demoPopoverBackdrop) {
            demoPopoverBackdrop.addEventListener('click', (e) => {
                e.stopPropagation();
                closePopover();
            });
        }

        // Close on click outside (Desktop mostly, but handles any stray clicks)
        document.addEventListener('click', (e) => {
           if (!demoPopover.contains(e.target) && !demoTrigger.contains(e.target)) {
             closePopover();
           }
        });
      }

      // Copy to clipboard logic
      copyButtons.forEach(btn => {
        btn.addEventListener('click', (e) => {
            e.stopPropagation(); // Prevent navigating to link
            e.preventDefault();
            const text = btn.dataset.text;
            if (text) {
                navigator.clipboard.writeText(text).then(() => {
                    const originalIcon = btn.innerHTML;
                    // Success icon (check)
                    btn.innerHTML = '<svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>';
                    setTimeout(() => {
                        btn.innerHTML = originalIcon;
                    }, 2000);
                });
            }
        });
      });


      // Mobile menu handling
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const stickyMobileMenuBtn = document.getElementById('sticky-mobile-menu-btn');
      const closeMobileMenuBtn = document.getElementById('close-mobile-menu');
      const mobileMenu = document.getElementById('mobile-menu');
      const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');

      function openMobileMenu() {
        mobileMenu.classList.remove('hidden');
      }

      function closeMobileMenu() {
        mobileMenu.classList.add('hidden');
      }

      mobileMenuBtn?.addEventListener('click', openMobileMenu);
      stickyMobileMenuBtn?.addEventListener('click', openMobileMenu);
      closeMobileMenuBtn?.addEventListener('click', closeMobileMenu);
      mobileMenuLinks.forEach(link => link.addEventListener('click', closeMobileMenu));

      // Sticky nav handling
      const stickyNav = document.getElementById('sticky-nav');
      const stickyNavInner = stickyNav?.querySelector('nav');
      const staticHeader = document.getElementById('static-header');

      window.addEventListener('scroll', () => {
        if (window.scrollY > 100) {
          stickyNav.classList.remove('-translate-y-4', 'opacity-0');
          stickyNav.classList.add('translate-y-0', 'opacity-100');
          stickyNavInner?.classList.remove('pointer-events-none');
          staticHeader.classList.add('opacity-0', 'pointer-events-none');
        } else {
          stickyNav.classList.add('-translate-y-4', 'opacity-0');
          stickyNav.classList.remove('translate-y-0', 'opacity-100');
          stickyNavInner?.classList.add('pointer-events-none');
          staticHeader.classList.remove('opacity-0', 'pointer-events-none');
        }
      });

      // Initially disable pointer events on sticky nav inner
      stickyNavInner?.classList.add('pointer-events-none');

      // Chat mockup handling
      const chatList = document.getElementById('chat-list');
      const chatView = document.getElementById('chat-view');
      const backToList = document.getElementById('back-to-list');
      const chatItems = document.querySelectorAll('.chat-item');
      const chatMessages = document.getElementById('chat-messages');
      const chatAvatar = document.getElementById('chat-avatar');
      const chatName = document.getElementById('chat-name');
      const chatLang = document.getElementById('chat-lang');
      const chatSource = document.getElementById('chat-source');
      const targetLang = document.getElementById('target-lang');

      let activeChat = conversations[0];

      function renderMessages(chat) {
        chatMessages.innerHTML = '';
        chat.messages.forEach(msg => {
          const isAgent = msg.sender === 'agent';
          const msgHtml = `
            <div class="flex gap-3 md:gap-4 animate-in fade-in slide-in-from-bottom-2 duration-300 ${isAgent ? 'justify-end' : ''}">
              ${!isAgent ? `<div class="w-8 h-8 rounded-full shrink-0 flex items-center justify-center text-xs font-bold shadow-sm mt-2 ${chat.avatarColor} hidden sm:flex">${chat.name.charAt(0)}</div>` : ''}
              <div class="flex flex-col max-w-[90%] md:max-w-[65%] ${isAgent ? 'items-end' : 'items-start'}">
                <div class="p-4 md:p-5 rounded-2xl text-sm leading-relaxed shadow-sm relative group transition-all ${isAgent ? 'bg-zinc-900 text-white rounded-tr-sm' : 'bg-white text-zinc-800 ring-1 ring-zinc-200 rounded-tl-sm shadow-sm'}">
                  <div>${msg.text}</div>
                  ${msg.translation ? `
                    <div class="mt-3 pt-2 text-xs border-t flex items-start gap-2 ${isAgent ? 'border-white/20 text-zinc-300' : 'border-zinc-100 text-zinc-400'}">
                      <svg class="w-3.5 h-3.5 shrink-0 mt-0.5 opacity-70 ${isAgent ? 'text-emerald-400' : ''}" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5h12M9 3v2m1.048 9.5A18.022 18.022 0 016.412 9m6.088 9h7M11 21l5-10 5 10M12.751 5C11.783 10.77 8.07 15.61 3 18.129"></path></svg>
                      <span class="italic">${msg.translation}</span>
                    </div>
                  ` : ''}
                </div>
                <span class="text-xs text-zinc-400 mt-2 px-1 font-medium">${msg.timestamp}</span>
              </div>
              ${isAgent ? '<div class="w-8 h-8 rounded-full bg-zinc-900 shrink-0 hidden sm:flex items-center justify-center text-white text-xs font-bold mt-2 shadow-sm">A</div>' : ''}
            </div>
          `;
          chatMessages.innerHTML += msgHtml;
        });

        // Add suggestion if last message is from user
        if (chat.messages.length > 0 && chat.messages[chat.messages.length - 1].sender === 'user') {
          chatMessages.innerHTML += `
            <div class="flex justify-center mt-6">
              <button class="bg-emerald-50 hover:bg-emerald-100 text-emerald-700 text-xs font-medium px-4 py-2 rounded-full flex items-center gap-2 transition-all ring-1 ring-emerald-200 shadow-sm hover:shadow-md active:scale-95">
                <svg class="w-3 h-3 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                <span>${suggestionText}</span>
              </button>
            </div>
          `;
        }
      }

      function selectChat(chatId) {
        const chat = conversations.find(c => c.id === chatId);
        if (!chat) return;

        activeChat = chat;

        // Update UI
        chatItems.forEach(item => {
          const isActive = parseInt(item.dataset.chatId) === chatId;
          item.classList.toggle('bg-zinc-100', isActive);
          item.classList.toggle('border-zinc-200', isActive);
          item.classList.toggle('shadow-sm', isActive);
          item.classList.toggle('active', isActive);
          item.classList.toggle('bg-transparent', !isActive);
          item.classList.toggle('border-transparent', !isActive);
          item.querySelector('.active-indicator')?.classList.toggle('opacity-0', !isActive);
        });

        // Update header
        chatAvatar.textContent = chat.name.charAt(0);
        chatAvatar.className = `w-10 h-10 rounded-full flex items-center justify-center text-sm font-bold ${chat.avatarColor} ring-1 ring-black/5`;
        chatName.textContent = chat.name;
        chatLang.textContent = chat.lang;
        chatSource.textContent = chat.source;
        targetLang.textContent = chat.lang;

        // Render messages
        renderMessages(chat);

        // Mobile: show chat view
        if (window.innerWidth < 768) {
          chatList.classList.add('hidden');
          chatView.classList.remove('hidden');
        }
      }

      chatItems.forEach(item => {
        item.addEventListener('click', () => {
          selectChat(parseInt(item.dataset.chatId));
        });
      });

      backToList?.addEventListener('click', () => {
        chatList.classList.remove('hidden');
        chatView.classList.add('hidden');
      });

      // Initialize with first chat
      selectChat(1);

      // Market counter handling
      const countryToggles = document.querySelectorAll('.country-toggle');
      const marketCount = document.getElementById('market-count');
      let baseCount = 38000000;
      const activeCountries = new Set();

      function formatCount(count) {
        return count.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ' ');
      }

      countryToggles.forEach(toggle => {
        toggle.addEventListener('click', () => {
          const code = toggle.dataset.code;
          const population = parseInt(toggle.dataset.population);
          const isActive = activeCountries.has(code);

          if (isActive) {
            activeCountries.delete(code);
            baseCount -= population;
          } else {
            activeCountries.add(code);
            baseCount += population;
          }

          // Update toggle UI
          const toggleSwitch = toggle.querySelector('.toggle-switch');
          const toggleKnob = toggle.querySelector('.toggle-knob');
          const countryName = toggle.querySelector('.country-name');
          const countrySub = toggle.querySelector('.country-sub');

          if (activeCountries.has(code)) {
            toggleSwitch.classList.remove('bg-zinc-200');
            toggleSwitch.classList.add('bg-zinc-900');
            toggleKnob.classList.add('translate-x-[1.25rem]');
            countryName.classList.remove('text-zinc-400');
            countryName.classList.add('text-zinc-900');
            countrySub.classList.remove('text-zinc-300');
            countrySub.classList.add('text-emerald-600', 'font-bold');
          } else {
            toggleSwitch.classList.add('bg-zinc-200');
            toggleSwitch.classList.remove('bg-zinc-900');
            toggleKnob.classList.remove('translate-x-[1.25rem]');
            // Clear inline style if present from previous version
            toggleKnob.style.transform = '';
            countryName.classList.add('text-zinc-400');
            countryName.classList.remove('text-zinc-900');
            countrySub.classList.add('text-zinc-300');
            countrySub.classList.remove('text-emerald-600', 'font-bold');
          }

          // Update count
          marketCount.textContent = formatCount(baseCount);
        });
      });
    </script>
</BaseLayout>
