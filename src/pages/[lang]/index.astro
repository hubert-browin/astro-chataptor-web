    /* Responsive Scaling Logic (The "80-90% Zoom" Effect) */
     
    /* Default (Mobile): Adjusted from 16px to 15px to make text slightly smaller globally on mobile */
    html {
      font-size: 15px;
    }

    /* Desktop Fluid Scaling */
    /* Reduced base font size to 11.5px on laptops to create a "zoomed out" feel.
       This scales down all rem-based sizes by ~28% compared to standard 16px.
    */
    @media (min-width: 1024px) {
      html {
        font-size: 11.5px; 
      }
    }

    /* On very large screens (Full HD+), slight increase to maintain readability */
    @media (min-width: 1536px) {
      html {
        font-size: 13px; 
      }
    }
     
    /* Smooth transition for resizing */
    html { transition: font-size 0.2s ease-out; }
  </style>

  <style>
    /* Custom Pulse Animation for the Demo Button */
    @keyframes pulse-ring {
      0% {
        box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.7);
      }
      70% {
        box-shadow: 0 0 0 10px rgba(16, 185, 129, 0);
      }
      100% {
        box-shadow: 0 0 0 0 rgba(16, 185, 129, 0);
      }
    }
    .animate-pulse-ring {
      animation: pulse-ring 2s infinite;
    }
     
    /* Popover Transitions */
    #demo-popover, #demo-popover-backdrop, .popover-content, .popover-triangle {
      transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    }

    /* Hidden State (Default) */
    #demo-popover:not(.is-open) {
      pointer-events: none;
    }
    #demo-popover:not(.is-open) #demo-popover-backdrop {
      opacity: 0;
    }

    /* Open State */
    #demo-popover.is-open {
      pointer-events: auto;
    }
    #demo-popover.is-open #demo-popover-backdrop {
      opacity: 1;
    }

    /* Mobile Specific Transforms (Bottom Sheet Style) */
    @media (max-width: 639px) {
      #demo-popover .popover-content {
        transform: translateY(100%);
      }
      #demo-popover.is-open .popover-content {
        transform: translateY(0);
      }
    }

    /* Desktop Specific Transforms (Side Popover style) */
    @media (min-width: 640px) {
      #demo-popover:not(.is-open) {
        opacity: 0;
        visibility: hidden;
      }
      #demo-popover.is-open {
        opacity: 1;
        visibility: visible;
