---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { locales } from '../../../i18n/config';
import { getBlogUI } from '../../../i18n/blog'; // <--- Importujemy naszƒÖ nowƒÖ funkcjƒô

export function getStaticPaths() {
  return locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;

// --- U≈ªYCIE NOWEGO PLIKU T≈ÅUMACZE≈É ---
const ui = getBlogUI(lang); 

// --- LOGIKA DANYCH ---

const posts = await getCollection('blog', ({ data }) => {
  return data.lang === lang;
});

const sortedPosts = posts.sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf());

const heroPost = sortedPosts[0]; 
const otherPosts = sortedPosts.slice(1); 

const formatDate = (date) => {
    return new Intl.DateTimeFormat(lang, { day: 'numeric', month: 'long', year: 'numeric' }).format(date);
};
---

<BaseLayout 
  title={`${ui.hero.title} - Chataptor`} 
  description={ui.hero.subtitle} 
  lang={lang}
>
  <main class="bg-white min-h-screen pt-32 pb-24 px-4 md:px-6 overflow-hidden">
    <div class="max-w-7xl mx-auto">
      
      {/* --- NAG≈Å√ìWEK SEKCJI --- */}
      <div class="relative text-center mb-20 md:mb-28">
        {/* Dekoracyjne t≈Ço */}
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-gradient-to-r from-emerald-50/50 via-white to-zinc-50/50 blur-3xl -z-10 rounded-full opacity-60"></div>
        
        <h1 class="text-4xl sm:text-5xl md:text-7xl font-extrabold text-zinc-900 mb-6 tracking-tight leading-[1.1]">
          {ui.hero.title}
        </h1>
        <p class="text-lg md:text-xl text-zinc-500 max-w-2xl mx-auto leading-relaxed font-light">
          {ui.hero.subtitle}
        </p>
      </div>

      {sortedPosts.length === 0 ? (
        <div class="flex flex-col items-center justify-center py-20 bg-zinc-50 rounded-[3rem] border border-zinc-100 border-dashed">
          <div class="w-16 h-16 bg-zinc-100 rounded-full flex items-center justify-center mb-4 text-3xl">üìù</div>
          <p class="text-zinc-500 font-medium">{ui.empty}</p>
        </div>
      ) : (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          
          {/* --- HERO POST (Du≈ºy) --- */}
          {heroPost && (
            <a href={`/${lang}/blog/${heroPost.slug.split('/')[0]}`} class="group md:col-span-2 relative bg-zinc-50 rounded-[2.5rem] overflow-hidden ring-1 ring-zinc-900/5 hover:ring-zinc-900/10 hover:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.1)] transition-all duration-500 flex flex-col md:flex-row min-h-[500px]">
              
              {/* Lewa strona: Tre≈õƒá */}
              <div class="p-8 md:p-12 lg:p-16 flex flex-col justify-center w-full md:w-[55%] order-2 md:order-1 relative z-10">
                <div class="flex flex-wrap items-center gap-3 mb-6">
                   {/* Badge NOWO≈öƒÜ */}
                   <span class="text-[10px] font-bold text-white bg-zinc-900 px-3 py-1 rounded-full shadow-md tracking-wide">
                      {ui.hero.new}
                   </span>
                   {/* Pierwszy tag */}
                   <span class="text-[10px] font-bold text-emerald-700 bg-emerald-50 px-3 py-1 rounded-full ring-1 ring-emerald-100 uppercase tracking-wide">
                      {heroPost.data.tags[0] || 'Blog'}
                   </span>
                   <time class="text-xs text-zinc-400 font-medium flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
                      {formatDate(heroPost.data.publishedAt)}
                   </time>
                </div>

                <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-zinc-900 mb-6 leading-[1.1] group-hover:text-emerald-700 transition-colors duration-300">
                  {heroPost.data.title}
                </h2>
                
                <p class="text-zinc-500 text-base md:text-lg mb-8 leading-relaxed line-clamp-3">
                  {heroPost.data.description}
                </p>

                <div class="flex items-center gap-3 mt-auto">
                  <span class="bg-white px-6 py-3 rounded-full text-sm font-bold text-zinc-900 shadow-sm ring-1 ring-zinc-200 group-hover:bg-zinc-900 group-hover:text-white group-hover:ring-zinc-900 transition-all duration-300 flex items-center gap-2">
                    {ui.hero.readMore}
                    <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
                  </span>
                </div>
              </div>

              {/* Prawa strona: Obrazek */}
              <div class="w-full md:w-[45%] h-64 md:h-auto order-1 md:order-2 relative overflow-hidden">
                  <div class="absolute inset-0 bg-gradient-to-t md:bg-gradient-to-l from-zinc-50 via-transparent to-transparent z-10 opacity-80 md:opacity-100"></div>
                  {heroPost.data.image ? (
                      <img 
                          src={heroPost.data.image} 
                          alt={heroPost.data.title} 
                          class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-700 ease-in-out" 
                      />
                  ) : (
                      // Fallback image (pattern)
                      <div class="absolute inset-0 bg-zinc-200 w-full h-full pattern-grid-lg opacity-10"></div>
                  )}
              </div>
            </a>
          )}

          {/* --- CTA BOX (Zawsze w tym samym miejscu) --- */}
          <div class="bg-zinc-900 rounded-[2.5rem] p-8 md:p-10 text-white flex flex-col justify-between relative overflow-hidden group shadow-2xl shadow-zinc-900/20 hover:-translate-y-1 transition-transform duration-300">
            {/* Dekoracyjne t≈Ço */}
            <div class="absolute top-0 right-0 w-64 h-64 bg-emerald-500/20 rounded-full blur-[80px] -mr-20 -mt-20 pointer-events-none"></div>
            <div class="absolute bottom-0 left-0 w-40 h-40 bg-indigo-500/20 rounded-full blur-[60px] -ml-10 -mb-10 pointer-events-none"></div>
            
            <div class="relative z-10">
              <div class="w-12 h-12 bg-white/10 rounded-2xl flex items-center justify-center mb-6 backdrop-blur-sm border border-white/10 text-2xl">
                üöÄ
              </div>
              <h3 class="text-2xl font-bold mb-3 leading-tight">{ui.cta.title}</h3>
              <p class="text-zinc-400 text-sm leading-relaxed">{ui.cta.desc}</p>
            </div>
            
            <a href="/register" class="mt-8 w-full bg-white text-zinc-900 font-bold py-4 rounded-2xl text-center hover:bg-emerald-50 transition-colors relative z-10 shadow-lg active:scale-95">
              {ui.cta.button}
            </a>
          </div>

          {/* --- POZOSTA≈ÅE POSTY (Grid) --- */}
          {otherPosts.map((post) => (
            <a href={`/${lang}/blog/${post.slug.split('/')[0]}`} class="group bg-white rounded-[2.5rem] ring-1 ring-zinc-200/70 hover:ring-zinc-300 hover:shadow-[0_20px_40px_-15px_rgba(0,0,0,0.08)] transition-all duration-300 flex flex-col h-full overflow-hidden hover:-translate-y-1">
              
              {/* Obrazek karty - Aspect Ratio 3:2 dla lepszego wyglƒÖdu */}
              <div class="aspect-[3/2] w-full bg-zinc-100 relative overflow-hidden border-b border-zinc-100">
                {post.data.image ? (
                    <img 
                        src={post.data.image} 
                        alt={post.data.title}
                        class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700 ease-out" 
                    />
                ) : (
                    <div class="absolute inset-0 flex items-center justify-center text-zinc-300 text-4xl">blog.</div>
                )}
                {/* Overlay na hover */}
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-300"></div>
              </div>

              {/* Tre≈õƒá karty */}
              <div class="flex-1 p-8 flex flex-col">
                <div class="flex items-center justify-between mb-4">
                  <div class="text-[10px] font-bold text-emerald-700 bg-emerald-50 px-2.5 py-1 rounded-full uppercase tracking-wide ring-1 ring-emerald-100/50">
                    {post.data.tags[0] || 'Article'}
                  </div>
                  <time class="text-[11px] text-zinc-400 font-medium">
                    {formatDate(post.data.publishedAt)}
                  </time>
                </div>

                <h3 class="text-xl font-bold text-zinc-900 mb-3 leading-snug group-hover:text-emerald-700 transition-colors">
                  {post.data.title}
                </h3>
                
                <p class="text-sm text-zinc-500 line-clamp-3 leading-relaxed mb-6">
                  {post.data.description}
                </p>

                <div class="mt-auto pt-6 border-t border-zinc-100 flex items-center justify-between">
                   <div class="flex items-center gap-2">
                      <div class="w-6 h-6 rounded-full bg-zinc-100 flex items-center justify-center text-[10px] font-bold text-zinc-500 ring-1 ring-zinc-200">
                        {post.data.author.charAt(0)}
                      </div>
                      <span class="text-xs font-semibold text-zinc-600">{post.data.author}</span>
                   </div>
                   <span class="text-xs font-bold text-zinc-400 group-hover:text-zinc-900 transition-colors flex items-center gap-1">
                      {ui.card.readMore} ‚Üí
                   </span>
                </div>
              </div>
            </a>
          ))}

        </div>
      )}
    </div>
  </main>
</BaseLayout>