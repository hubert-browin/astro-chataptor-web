---
import { getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { locales } from '../../../i18n/config';
import { getBlogUI } from '../../../i18n/blog';

export function getStaticPaths() {
  return locales.map((lang) => ({ params: { lang } }));
}

const { lang } = Astro.params;
const ui = getBlogUI(lang as any);

// "en/live-chat-translation-real-time" -> "live-chat-translation-real-time"
// "de/poradnik/seo" -> "poradnik/seo"
const stripLangFromSlug = (fullSlug: string, lang: string) =>
  fullSlug.startsWith(`${lang}/`) ? fullSlug.slice(lang.length + 1) : fullSlug;

// finalny URL wpisu: "/en/blog/poradnik/seo"
const postHref = (post: any) => `/${lang}/blog/${stripLangFromSlug(post.slug, lang)}`;

const posts = await getCollection('blog', ({ slug, data }) => {
  // Wariant "folder jest ≈∫r√≥d≈Çem prawdy" + sp√≥jno≈õƒá z frontmatter:
  return slug.startsWith(`${lang}/`) && data.lang === lang;
});

const sortedPosts = posts.sort((a, b) => b.data.publishedAt.valueOf() - a.data.publishedAt.valueOf());

const heroPost = sortedPosts[0];
const otherPosts = sortedPosts.slice(1);

const formatDate = (date: Date) => {
  return new Intl.DateTimeFormat(lang, { day: 'numeric', month: 'long', year: 'numeric' }).format(date);
};
---

<BaseLayout
  title={`${ui.hero.title} - Chataptor`}
  description={ui.hero.subtitle}
  lang={lang}
>
  <main class="bg-white min-h-screen pt-32 pb-24 px-4 md:px-6 overflow-hidden">
    <div class="max-w-7xl mx-auto">

      {/* --- HEADER SEKCJI (Bardziej subtelny i elegancki) --- */}
      <div class="relative mb-20 md:mb-28 text-center">
         {/* T≈Ço ambientowe */}
        <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-emerald-100/40 blur-[100px] rounded-full -z-10 pointer-events-none"></div>

        <span class="inline-block py-1 px-3 rounded-full bg-zinc-50 border border-zinc-100 text-zinc-500 text-[10px] font-bold uppercase tracking-widest mb-6">
            Blog & News
        </span>
        <h1 class="text-5xl md:text-7xl font-extrabold text-zinc-900 mb-6 tracking-tight leading-[1.1]">
          {ui.hero.title}
        </h1>
        <p class="text-lg md:text-xl text-zinc-500 max-w-2xl mx-auto leading-relaxed font-light text-balance">
          {ui.hero.subtitle}
        </p>
      </div>

      {sortedPosts.length === 0 ? (
        <div class="flex flex-col items-center justify-center py-20 bg-zinc-50 rounded-[3rem] border border-zinc-100 border-dashed">
          <div class="w-16 h-16 bg-zinc-100 rounded-full flex items-center justify-center mb-4 text-3xl">üìù</div>
          <p class="text-zinc-500 font-medium">{ui.empty}</p>
        </div>
      ) : (
        <div class="flex flex-col gap-16 md:gap-24">

          {/* --- HERO POST --- */}
          {heroPost && (
            <a href={postHref(heroPost)} class="group relative block">
                <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-16 items-center">
                    {/* Lewa strona: Du≈ºe zdjƒôcie */}
                    <div class="lg:col-span-7 relative">
                        <div class="aspect-[16/9] lg:aspect-[4/3] rounded-[2.5rem] overflow-hidden shadow-2xl shadow-zinc-200/50 ring-1 ring-black/5 relative">
                             {heroPost.data.image ? (
                                <img
                                    src={heroPost.data.image}
                                    alt={heroPost.data.title}
                                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                                />
                            ) : (
                                <div class="absolute inset-0 bg-zinc-100 w-full h-full flex items-center justify-center text-zinc-300 text-6xl font-bold opacity-30">News</div>
                            )}
                            <div class="absolute inset-0 ring-1 ring-inset ring-black/5 rounded-[2.5rem]"></div>
                        </div>
                    </div>

                    {/* Prawa strona: Tre≈õƒá */}
                    <div class="lg:col-span-5 flex flex-col justify-center py-4">
                        <div class="flex items-center gap-3 mb-6">
                            <span class="text-[10px] font-bold text-white bg-zinc-900 px-3 py-1 rounded-full shadow-md tracking-wide">
                                {ui.hero.new}
                            </span>
                            <span class="text-[10px] font-bold text-emerald-700 bg-emerald-50 px-3 py-1 rounded-full ring-1 ring-emerald-100 uppercase tracking-wide">
                                {heroPost.data.tags[0] || 'Article'}
                            </span>
                            <time class="text-xs text-zinc-400 font-medium ml-auto lg:ml-0">
                                {formatDate(heroPost.data.publishedAt)}
                            </time>
                        </div>

                        <h2 class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-zinc-900 mb-6 leading-[1.1] group-hover:text-emerald-700 transition-colors">
                            {heroPost.data.title}
                        </h2>

                        <p class="text-zinc-500 text-base md:text-lg mb-8 leading-relaxed line-clamp-3">
                            {heroPost.data.description}
                        </p>

                        <div class="flex items-center gap-3">
                            <div class="w-10 h-10 rounded-full bg-zinc-100 flex items-center justify-center text-xs font-bold text-zinc-500 ring-1 ring-zinc-200">
                                {heroPost.data.author.charAt(0)}
                            </div>
                            <span class="text-sm font-bold text-zinc-900">{heroPost.data.author}</span>
                            <span class="w-1 h-1 rounded-full bg-zinc-300 mx-2"></span>
                            <span class="text-sm font-bold text-emerald-600 flex items-center gap-1 group-hover:gap-2 transition-all">
                                {ui.hero.readMore} ‚Üí
                            </span>
                        </div>
                    </div>
                </div>
            </a>
          )}

          {/* --- GRID POZOSTA≈ÅYCH WPIS√ìW --- */}
          {otherPosts.length > 0 && (
              <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-16 border-t border-zinc-100 pt-16 md:pt-24">
                {otherPosts.map((post) => (
                    <a href={postHref(post)} class="group flex flex-col h-full hover:-translate-y-1 transition-transform duration-300">
                        {/* Zdjƒôcie */}
                        <div class="aspect-[3/2] rounded-[2rem] overflow-hidden bg-zinc-100 mb-6 relative shadow-md ring-1 ring-black/5">
                            {post.data.image ? (
                                <img
                                    src={post.data.image}
                                    alt={post.data.title}
                                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                                />
                            ) : (
                                <div class="absolute inset-0 flex items-center justify-center text-zinc-300">Blog</div>
                            )}
                            {/* Hover Overlay */}
                            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/5 transition-colors duration-300"></div>
                        </div>

                        {/* Tre≈õƒá */}
                        <div class="flex-1 flex flex-col">
                            <div class="flex items-center justify-between mb-4">
                                <span class="text-[10px] font-bold text-emerald-700 bg-emerald-50 px-2.5 py-1 rounded-full uppercase tracking-wide ring-1 ring-emerald-100/50">
                                    {post.data.tags[0] || 'Article'}
                                </span>
                                <time class="text-[11px] text-zinc-400 font-medium">
                                    {formatDate(post.data.publishedAt)}
                                </time>
                            </div>

                            <h3 class="text-xl font-bold text-zinc-900 mb-3 leading-snug group-hover:text-emerald-700 transition-colors">
                                {post.data.title}
                            </h3>

                            <p class="text-sm text-zinc-500 line-clamp-2 leading-relaxed mb-4 flex-1">
                                {post.data.description}
                            </p>

                            <div class="flex items-center gap-2 mt-auto pt-4 border-t border-zinc-50/50">
                                <span class="text-xs font-bold text-zinc-400 group-hover:text-zinc-900 transition-colors flex items-center gap-1">
                                    {ui.card.readMore} <span class="transition-transform group-hover:translate-x-1">‚Üí</span>
                                </span>
                            </div>
                        </div>
                    </a>
                ))}
              </div>
          )}

        </div>
      )}

    </div>
  </main>
</BaseLayout>