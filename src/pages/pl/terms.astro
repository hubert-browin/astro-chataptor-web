        const mobileTocLinks = document.querySelectorAll('.mobile-toc-link');

        tocToggle?.addEventListener('click', () => {
          mobileToc?.classList.toggle('hidden');
          tocChevron?.classList.toggle('rotate-180');
        });

        mobileTocLinks.forEach(link => {
          link.addEventListener('click', () => {
            mobileToc?.classList.add('hidden');
            tocChevron?.classList.remove('rotate-180');
          });
        });
      </script>
    </main>
  ) : (
    <!-- Simple placeholder for other languages -->
    <section class="relative pt-32 md:pt-48 pb-16 md:pb-32 text-center overflow-hidden">
      <div class="px-4 md:px-6 max-w-5xl mx-auto relative z-10">
        <h1 class="text-3xl md:text-4xl font-extrabold tracking-tight mb-8 text-zinc-900">
          {t.title}
        </h1>
        <p class="text-base md:text-lg text-zinc-500 max-w-2xl mx-auto mb-10">
          {t.description}
        </p>
        <a
          href={`/${lang}/`}
          class="inline-flex items-center gap-2 text-emerald-600 hover:text-emerald-700 font-medium"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
          {t.backLink}
        </a>
      </div>
    </section>
  )}
</BaseLayout>
