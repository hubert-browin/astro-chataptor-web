---
import { locales, type Locale } from '../../i18n/config';
import BaseLayout from '../../layouts/BaseLayout.astro';

export function getStaticPaths() {
  return locales.map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: Locale };
const currentYear = new Date().getFullYear();

// Page translations
const t = {
  pl: {
    title: 'Regulamin Serwisu',
    description: 'Regulamin korzystania z platformy Chataptor',
    backLink: 'Strona główna',
    tocTitle: 'Spis treści',
    lastUpdate: 'Ostatnia aktualizacja: 29 stycznia 2026',
    introTitle: 'Zasady korzystania z platformy Chataptor',
    introText: 'Niniejszy Regulamin określa zasady korzystania z platformy Chataptor. Korzystając z naszych usług, akceptujesz poniższe warunki.',
    needHelp: 'Potrzebujesz pomocy?',
    privacyLink: 'Polityka Prywatności',
    footerDesc: 'Brama na świat dla Twojego e-commerce. Przełamujemy bariery językowe, łącząc AI z ludzką empatią.',
    contact: 'Kontakt',
    legal: 'Legal',
    privacy: 'Polityka prywatności',
    terms: 'Regulamin',
    copyright: 'Wszystkie prawa zastrzeżone.',
  },
  en: {
    title: 'Terms of Service',
    description: 'Terms of use for the Chataptor platform',
    backLink: 'Home',
    tocTitle: 'Table of Contents',
    lastUpdate: 'Last updated: January 29, 2026',
    introTitle: 'Rules for using the Chataptor platform',
    introText: 'These Terms of Service govern your use of the Chataptor platform. By using our services, you accept these terms.',
    needHelp: 'Need help?',
    privacyLink: 'Privacy Policy',
    footerDesc: 'Your gateway to the world for e-commerce. Breaking language barriers by combining AI with human empathy.',
    contact: 'Contact',
    legal: 'Legal',
    privacy: 'Privacy Policy',
    terms: 'Terms of Service',
    copyright: 'All rights reserved.',
  },
}[lang] || {
  title: 'Terms of Service',
  description: 'Terms of use for the Chataptor platform',
  backLink: 'Home',
  tocTitle: 'Table of Contents',
  lastUpdate: 'Last updated: January 29, 2026',
  introTitle: 'Rules for using the Chataptor platform',
  introText: 'These Terms of Service govern your use of the Chataptor platform. By using our services, you accept these terms.',
  needHelp: 'Need help?',
  privacyLink: 'Privacy Policy',
  footerDesc: 'Your gateway to the world for e-commerce. Breaking language barriers by combining AI with human empathy.',
  contact: 'Contact',
  legal: 'Legal',
  privacy: 'Privacy Policy',
  terms: 'Terms of Service',
  copyright: 'All rights reserved.',
};

// Only Polish has full content
const isPolish = lang === 'pl';

// TOC sections
const tocSections = [
  { number: '1', title: 'Definicje' },
  { number: '2', title: 'Postanowienia ogólne' },
  { number: '3', title: 'Rejestracja i Konto' },
  { number: '4', title: 'Zakres Usług' },
  { number: '5', title: 'Opłaty i płatności' },
  { number: '6', title: 'Obowiązki Użytkownika' },
  { number: '7', title: 'Odpowiedzialność' },
  { number: '8', title: 'Własność intelektualna' },
  { number: '9', title: 'Ochrona danych' },
  { number: '10', title: 'Rozwiązanie umowy' },
  { number: '11', title: 'Reklamacje' },
  { number: '12', title: 'Rozwiązywanie sporów' },
  { number: '13', title: 'Postanowienia końcowe' },
  { number: '14', title: 'Kontakt' },
];
---

<BaseLayout
  title={`${t.title} - Chataptor`}
  description={t.description}
  lang={lang}
  slug="terms"
  hideHeader={true}
  hideFooter={true}
>
  {isPolish ? (
    <main class="min-h-screen bg-white">
      <!-- HEADER -->
      <header class="sticky top-0 z-50 bg-white/80 backdrop-blur-xl border-b border-zinc-100">
        <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
          <a href={`/${lang}/`} class="flex items-center gap-2">
            <img src="/images/landing/logotype.png" alt="Chataptor Logo" class="h-6 md:h-7 object-contain opacity-90" />
          </a>
          <a
            href={`/${lang}/`}
            class="text-sm font-medium text-zinc-500 hover:text-zinc-900 transition-colors flex items-center gap-2"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            {t.backLink}
          </a>
        </div>
      </header>

      <!-- MOBILE TOC TOGGLE -->
      <div class="lg:hidden sticky top-[57px] z-40 bg-white/95 backdrop-blur-sm border-b border-zinc-100">
        <button
          id="mobile-toc-toggle"
          class="w-full px-6 py-3 flex items-center justify-between text-sm font-medium text-zinc-700 hover:bg-zinc-50 transition-colors"
        >
          <span class="flex items-center gap-2">
            <svg class="w-4 h-4 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7" />
            </svg>
            {t.tocTitle}
          </span>
          <svg id="toc-chevron" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <!-- Mobile TOC Dropdown -->
        <div id="mobile-toc" class="hidden">
          <nav class="px-6 py-4 bg-zinc-50 border-b border-zinc-100 max-h-[60vh] overflow-y-auto">
            <ul class="space-y-2">
              {tocSections.map((section) => (
                <li>
                  <a
                    href={`#section-${section.number}`}
                    class="mobile-toc-link flex items-center gap-3 py-2 text-sm text-zinc-700 hover:text-emerald-700 transition-colors"
                  >
                    <span class="w-6 h-6 bg-emerald-100 rounded-md flex items-center justify-center text-xs font-bold text-emerald-700">
                      {section.number}
                    </span>
                    {section.title}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>
      </div>

      <!-- CONTENT WITH SIDEBAR -->
      <div class="max-w-7xl mx-auto px-6 py-8 md:py-16 lg:grid lg:grid-cols-[280px_1fr] lg:gap-12">
        <!-- DESKTOP SIDEBAR TOC -->
        <aside class="hidden lg:block">
          <div class="sticky top-24">
            <div class="bg-white rounded-2xl ring-1 ring-zinc-900/5 shadow-sm p-6">
              <h3 class="text-xs font-bold text-zinc-400 uppercase tracking-widest mb-4">{t.tocTitle}</h3>
              <nav>
                <ul class="space-y-1">
                  {tocSections.map((section) => (
                    <li>
                      <a
                        href={`#section-${section.number}`}
                        class="group flex items-center gap-2.5 px-3 py-2 rounded-lg text-sm text-zinc-600 hover:text-zinc-900 hover:bg-zinc-50 transition-colors"
                      >
                        <span class="w-5 h-5 bg-zinc-100 group-hover:bg-emerald-100 rounded flex items-center justify-center text-[10px] font-bold text-zinc-500 group-hover:text-emerald-700 transition-colors">
                          {section.number}
                        </span>
                        <span class="truncate">{section.title}</span>
                      </a>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>

            <!-- Quick Links -->
            <div class="mt-6 p-4 bg-emerald-50 rounded-xl ring-1 ring-emerald-200/50">
              <p class="text-xs font-semibold text-emerald-800 mb-2">{t.needHelp}</p>
              <a href="mailto:support@browin.pl" class="text-sm text-emerald-700 hover:text-emerald-900 font-medium flex items-center gap-1.5">
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                support@browin.pl
              </a>
            </div>

            <!-- Related Link -->
            <div class="mt-4 p-4 bg-zinc-50 rounded-xl ring-1 ring-zinc-200">
              <a href={`/${lang}/privacy`} class="text-sm text-zinc-700 hover:text-zinc-900 font-medium flex items-center gap-2">
                <svg class="w-4 h-4 text-zinc-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                </svg>
                {t.privacyLink}
              </a>
            </div>
          </div>
        </aside>

        <!-- MAIN CONTENT -->
        <main class="max-w-3xl">
          <!-- Header -->
          <div class="mb-10">
            <div class="inline-flex items-center gap-2 px-3 py-1 bg-white ring-1 ring-zinc-900/5 rounded-full text-[11px] font-medium text-zinc-500 mb-6 shadow-[0_2px_8px_rgba(0,0,0,0.04)]">
              <svg class="w-3.5 h-3.5 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
              Warunki korzystania
            </div>
            <h1 class="text-3xl md:text-4xl lg:text-5xl font-extrabold text-zinc-900 tracking-tight mb-4">{t.title}</h1>
            <p class="text-zinc-500 text-base md:text-lg">{t.lastUpdate}</p>
          </div>

          <!-- Intro Card -->
          <div class="bg-gradient-to-br from-emerald-50 to-emerald-50 ring-1 ring-emerald-200/50 rounded-2xl p-6 mb-12">
            <div class="flex gap-4">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-emerald-100 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              </div>
              <div>
                <p class="text-emerald-900 font-medium mb-1">{t.introTitle}</p>
                <p class="text-emerald-800/80 text-sm leading-relaxed">{t.introText}</p>
              </div>
            </div>
          </div>

          <!-- Sections -->
          <div class="space-y-12">
            <!-- Section 1: Definicje -->
            <section id="section-1" class="scroll-mt-24">
              <div class="flex items-start gap-4 mb-6">
                <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center shadow-sm">
                  <span class="text-white font-bold text-sm">1</span>
                </div>
                <h2 class="text-xl md:text-2xl font-bold text-zinc-900 pt-1.5">Definicje</h2>
              </div>
              <div class="pl-0 md:pl-14">
                <p class="text-zinc-600 leading-relaxed mb-6">W niniejszym Regulaminie stosuje się następujące definicje:</p>
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 overflow-hidden">
                  <dl class="divide-y divide-zinc-100">
                    <div class="px-5 py-4">
                      <dt class="font-semibold text-zinc-900 mb-1">Usługodawca</dt>
                      <dd class="text-sm text-zinc-600 leading-relaxed">BROWIN Spółka z ograniczoną odpowiedzialnością Spółka komandytowa z siedzibą w Łodzi (93-373), ul. Pryncypalna 129/141, NIP: 729-268-73-25, REGON: 101003641, KRS: 0000459418</dd>
                    </div>
                    <div class="px-5 py-4">
                      <dt class="font-semibold text-zinc-900 mb-1">Serwis / Platforma</dt>
                      <dd class="text-sm text-zinc-600 leading-relaxed">Platforma Chataptor dostępna pod adresem chataptor.com</dd>
                    </div>
                    <div class="px-5 py-4">
                      <dt class="font-semibold text-zinc-900 mb-1">Użytkownik</dt>
                      <dd class="text-sm text-zinc-600 leading-relaxed">Osoba fizyczna, osoba prawna lub jednostka organizacyjna korzystająca z Serwisu</dd>
                    </div>
                    <div class="px-5 py-4">
                      <dt class="font-semibold text-zinc-900 mb-1">Konto</dt>
                      <dd class="text-sm text-zinc-600 leading-relaxed">Indywidualne konto Użytkownika w Serwisie</dd>
                    </div>
                    <div class="px-5 py-4">
                      <dt class="font-semibold text-zinc-900 mb-1">Usługi</dt>
                      <dd class="text-sm text-zinc-600 leading-relaxed">Funkcjonalności udostępniane przez Serwis, w tym obsługa czatu, tłumaczenie wiadomości, integracje</dd>
                    </div>
                    <div class="px-5 py-4">
                      <dt class="font-semibold text-zinc-900 mb-1">Widget</dt>
                      <dd class="text-sm text-zinc-600 leading-relaxed">Komponent czatu do osadzenia na stronie internetowej Użytkownika</dd>
                    </div>
                  </dl>
                </div>
              </div>
            </section>

            <!-- Section 2: Postanowienia ogólne -->
            <section id="section-2" class="scroll-mt-24">
              <div class="flex items-start gap-4 mb-6">
                <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center shadow-sm">
                  <span class="text-white font-bold text-sm">2</span>
                </div>
                <h2 class="text-xl md:text-2xl font-bold text-zinc-900 pt-1.5">Postanowienia ogólne</h2>
              </div>
              <div class="pl-0 md:pl-14 space-y-4">
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0 w-7 h-7 bg-emerald-100 rounded-lg flex items-center justify-center">
                      <span class="text-xs font-bold text-emerald-700">1</span>
                    </div>
                    <div class="flex-1 text-zinc-700 leading-relaxed">
                      Regulamin określa zasady świadczenia usług drogą elektroniczną przez Usługodawcę.
                    </div>
                  </div>
                </div>
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0 w-7 h-7 bg-emerald-100 rounded-lg flex items-center justify-center">
                      <span class="text-xs font-bold text-emerald-700">2</span>
                    </div>
                    <div class="flex-1 text-zinc-700 leading-relaxed">
                      Korzystanie z Serwisu oznacza akceptację niniejszego Regulaminu oraz <a href={`/${lang}/privacy`} class="text-emerald-600 font-medium hover:underline">Polityki Prywatności</a>.
                    </div>
                  </div>
                </div>
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0 w-7 h-7 bg-emerald-100 rounded-lg flex items-center justify-center">
                      <span class="text-xs font-bold text-emerald-700">3</span>
                    </div>
                    <div class="flex-1 text-zinc-700 leading-relaxed">
                      Usługodawca świadczy usługi zgodnie z obowiązującymi przepisami prawa polskiego i unijnego.
                    </div>
                  </div>
                </div>
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0 w-7 h-7 bg-emerald-100 rounded-lg flex items-center justify-center">
                      <span class="text-xs font-bold text-emerald-700">4</span>
                    </div>
                    <div class="flex-1 text-zinc-700 leading-relaxed">
                      Serwis jest przeznaczony dla przedsiębiorców (B2B) oraz konsumentów.
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <!-- Section 3: Rejestracja i Konto -->
            <section id="section-3" class="scroll-mt-24">
              <div class="flex items-start gap-4 mb-6">
                <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center shadow-sm">
                  <span class="text-white font-bold text-sm">3</span>
                </div>
                <h2 class="text-xl md:text-2xl font-bold text-zinc-900 pt-1.5">Rejestracja i Konto</h2>
              </div>
              <div class="pl-0 md:pl-14 space-y-4">
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0 w-7 h-7 bg-emerald-100 rounded-lg flex items-center justify-center">
                      <span class="text-xs font-bold text-emerald-700">1</span>
                    </div>
                    <div class="flex-1 text-zinc-700 leading-relaxed">
                      Korzystanie z pełnej funkcjonalności Serwisu wymaga założenia Konta.
                    </div>
                  </div>
                </div>
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0 w-7 h-7 bg-emerald-100 rounded-lg flex items-center justify-center">
                      <span class="text-xs font-bold text-emerald-700">2</span>
                    </div>
                    <div class="flex-1 text-zinc-700 leading-relaxed">
                      <span>Rejestracja jest bezpłatna i wymaga podania:</span>
                      <ul class="mt-3 space-y-2 ml-4">
                        <li class="flex items-center gap-2 text-sm text-zinc-600">
                          <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" /></svg>
                          Adresu e-mail
                        </li>
                        <li class="flex items-center gap-2 text-sm text-zinc-600">
                          <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" /></svg>
                          Hasła
                        </li>
                        <li class="flex items-center gap-2 text-sm text-zinc-600">
                          <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" /></svg>
                          Nazwy organizacji (opcjonalnie)
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0 w-7 h-7 bg-emerald-100 rounded-lg flex items-center justify-center">
                      <span class="text-xs font-bold text-emerald-700">3</span>
                    </div>
                    <div class="flex-1 text-zinc-700 leading-relaxed">
                      Użytkownik może również zarejestrować się za pomocą konta Google (OAuth).
                    </div>
                  </div>
                </div>
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0 w-7 h-7 bg-emerald-100 rounded-lg flex items-center justify-center">
                      <span class="text-xs font-bold text-emerald-700">4</span>
                    </div>
                    <div class="flex-1 text-zinc-700 leading-relaxed">
                      <span>Użytkownik zobowiązuje się do:</span>
                      <ul class="mt-3 space-y-2 ml-4">
                        <li class="flex items-center gap-2 text-sm text-zinc-600">
                          <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" /></svg>
                          Podania prawdziwych danych
                        </li>
                        <li class="flex items-center gap-2 text-sm text-zinc-600">
                          <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" /></svg>
                          Zachowania poufności danych logowania
                        </li>
                        <li class="flex items-center gap-2 text-sm text-zinc-600">
                          <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4" /></svg>
                          Niezwłocznego informowania o nieautoryzowanym dostępie do Konta
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-4">
                  <div class="flex gap-4">
                    <div class="flex-shrink-0 w-7 h-7 bg-emerald-100 rounded-lg flex items-center justify-center">
                      <span class="text-xs font-bold text-emerald-700">5</span>
                    </div>
                    <div class="flex-1 text-zinc-700 leading-relaxed">
                      Usługodawca może odmówić rejestracji lub zablokować Konto w przypadku naruszenia Regulaminu.
                    </div>
                  </div>
                </div>
              </div>
            </section>

            <!-- Section 4: Zakres Usług -->
            <section id="section-4" class="scroll-mt-24">
              <div class="flex items-start gap-4 mb-6">
                <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-br from-emerald-500 to-emerald-600 rounded-xl flex items-center justify-center shadow-sm">
                  <span class="text-white font-bold text-sm">4</span>
                </div>
                <h2 class="text-xl md:text-2xl font-bold text-zinc-900 pt-1.5">Zakres Usług</h2>
              </div>
              <div class="pl-0 md:pl-14">
                <p class="text-zinc-600 leading-relaxed mb-6">Platforma Chataptor oferuje następujące funkcjonalności:</p>
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-6">
                  <div class="bg-white rounded-xl ring-1 ring-zinc-200 p-5 hover:shadow-sm transition-shadow">
