---
// src/layouts/BaseLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

const { title, description, lang, isLandingPage = false, hideFooter = false } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ViewTransitions />

    {/* STYLE GLOBALNE - Przeniesione z Landing Page dla spójności */}
    <style is:global>
      /* Responsive Scaling Logic (The "80-90% Zoom" Effect) */
      /* Zapewnia to samo odczucie wielkości na każdej podstronie */
      
      /* Default (Mobile) */
      html {
        font-size: 15px;
      }

      /* Desktop Fluid Scaling - "Zoomed out feel" */
      @media (min-width: 1024px) {
        html {
          font-size: 11.5px; 
        }
      }

      /* Large Screens */
      @media (min-width: 1536px) {
        html {
          font-size: 13px; 
        }
      }
       
      html { transition: font-size 0.2s ease-out; }
      
      /* Custom Scrollbar */
      .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
      }
      .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: rgba(0, 0, 0, 0.1);
        border-radius: 20px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background-color: rgba(0, 0, 0, 0.2);
      }
    </style>
  </head>
  <body class="bg-white text-zinc-900 font-sans selection:bg-emerald-100 selection:text-emerald-900 overflow-x-hidden flex flex-col min-h-screen">
    
    {/* Header jest teraz częścią layoutu, identyczny wszędzie */}
    <Header lang={lang} isLandingPage={isLandingPage} />

    {/* Główna treść */}
    <div class="flex-1 w-full">
      <slot />
    </div>

    {/* Footer (chyba że ukryty) */}
    {!hideFooter && <Footer lang={lang} />}
    
  </body>
</html>