---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
  description: string;
  lang: string;
  slug?: string;
  isLandingPage?: boolean;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const { 
  title, 
  description, 
  lang, 
  isLandingPage = false, 
  hideHeader = false, 
  hideFooter = false 
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ViewTransitions />

    {/* GLOBALNE STYLE SKALOWANIA */}
    <style is:global>
      /* Default (Mobile): 15px base */
      html {
        font-size: 15px;
      }

      /* Desktop Fluid Scaling */
      @media (min-width: 1024px) {
        html {
          font-size: 11.5px; 
        }
      }

      /* Large Screens */
      @media (min-width: 1536px) {
        html {
          font-size: 13px; 
        }
      }
       
      html { transition: font-size 0.2s ease-out; }
      
      /* Custom Scrollbar */
      .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
      }
      .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: rgba(0, 0, 0, 0.1);
        border-radius: 20px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background-color: rgba(0, 0, 0, 0.2);
      }

      ::selection {
        background-color: #d1fae5;
        color: #064e3b;
      }
    </style>

  </head>
  <body class="bg-white text-zinc-900 font-sans overflow-x-hidden flex flex-col min-h-screen">
    
    {!hideHeader && <Header lang={lang} isLandingPage={isLandingPage} />}

    <div class="flex-1 w-full">
      <slot />
    </div>

    {!hideFooter && <Footer lang={lang} />}
    <script
      is:inline
      src="https://chataptor.com/widget/quantumchat-widget.umd.js"
      data-api-url="https://chataptor.com"
      data-site-id="chataptor-1769604218"
      data-widget-key="cGtflAUCFCQ8y72h6ecYf9nKRLxejR-Y"
      data-welcome-message="Hello! How can I help you today?"
      data-header-title="Customer Support"
      data-input-placeholder="Type your message..."
      data-theme="light"
      data-position="bottom-right"
      data-primary-color="#18181B"
      data-translation-enabled="true"
      data-debug="false"
    ></script>
  </body>
</html>