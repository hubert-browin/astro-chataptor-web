---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ViewTransitions } from 'astro:transitions';

interface Props {
  title: string;
  description: string;
  lang: string;
  slug?: string;
  isLandingPage?: boolean;
  hideHeader?: boolean;
  hideFooter?: boolean;
}

const { 
  title, 
  description, 
  lang, 
  isLandingPage = false, 
  hideHeader = false, 
  hideFooter = false 
} = Astro.props;
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ViewTransitions />

    {/* GLOBALNE STYLE PRZENIESIONE Z INDEX.ASTRO */}
    {/* Dzięki temu każda podstrona (Blog, Privacy) wygląda identycznie (skala, scrollbar) */}
    <style is:global>
      /* Default (Mobile): 15px base */
      html {
        font-size: 15px;
      }

      /* Desktop Fluid Scaling - "Zoomed out feel" */
      @media (min-width: 1024px) {
        html {
          font-size: 11.5px; 
        }
      }

      /* Large Screens */
      @media (min-width: 1536px) {
        html {
          font-size: 13px; 
        }
      }
       
      /* Smooth transition for resizing */
      html { transition: font-size 0.2s ease-out; }
      
      /* Custom Scrollbar */
      .custom-scrollbar::-webkit-scrollbar {
        width: 6px;
      }
      .custom-scrollbar::-webkit-scrollbar-track {
        background: transparent;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb {
        background-color: rgba(0, 0, 0, 0.1);
        border-radius: 20px;
      }
      .custom-scrollbar::-webkit-scrollbar-thumb:hover {
        background-color: rgba(0, 0, 0, 0.2);
      }

      /* Globalne ustawienia selekcji */
      ::selection {
        background-color: #d1fae5; /* emerald-100 */
        color: #064e3b; /* emerald-900 */
      }
    </style>
  </head>
  <body class="bg-white text-zinc-900 font-sans overflow-x-hidden flex flex-col min-h-screen">
    
    {/* Header automatycznie decyduje czy być sticky czy statyczny na bazie propsa isLandingPage */}
    {!hideHeader && <Header lang={lang} isLandingPage={isLandingPage} />}

    {/* Główna zawartość */}
    <div class="flex-1 w-full">
      <slot />
    </div>

    {/* Footer */}
    {!hideFooter && <Footer lang={lang} />}
    
  </body>
</html>